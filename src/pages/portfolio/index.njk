{% set page_title = 'Portfolio' %}
{% set page_description = 'Samples and case studies of my past work.'%}

{% extends '_layout.njk' %}

{% import 'macros/_portfolio-preview.njk' as preview %}

{% block main %}

   <h1 class="heading-1 margin-bottom-1">Portfolio</h1>
   <p class="paragraph margin-bottom-2">Read about projects I've completed over the years, spanning from desktop apps to e-commerce websites and web-based software platforms.</p>

   <section class="margin-bottom-2">
      <h2 class="heading-2 margin-bottom-1">UX Case Studies</h2>

      <div class="gallery">
         {% set loopers = [projects.id_1, projects.id_2] %}

         {% for loop in loopers %}
         {{ preview.settings(loop.name, loop.url, loop.thumbnail) }}
         {% endfor %}
      </div>

   </section>

   <section>
      <h2 class="heading-2 margin-bottom-1">Projects</h2>
      <div class="gallery">
         {% set loopers = [projects.id_8, projects.id_7, projects.id_3, projects.id_4, projects.id_5, projects.id_6] %}

         {% for loop in loopers %}
         {{ preview.settings(loop.name, loop.url, loop.thumbnail) }}
         {% endfor %}
      </div>
   </section>

   

{% endblock %}